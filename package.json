{
  "name": "fsg-launcher",
  "version": "0.1.0",
  "description": "Fireside Gaming Launcher",
  "main": "main.js",
  "author": "Fireside Gaming",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "de.firesidegaming.launcher",
    "productName": "FSG Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FSG Launcher"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Derr12",
        "repo": "fsg-launcher"
      }
    ]
  }
}
